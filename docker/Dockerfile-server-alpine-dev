FROM tkanstantsin/userver-php:4.7-php7.3.13-alpine3.11

RUN apk add --no-cache --virtual .build-deps $PHPIZE_DEPS \
    \
    # xdebug
    && pecl install xdebug \
    \
    # phan
    && pecl install ast-1.0.5 \
    && docker-php-ext-enable ast \
    \
    # cleanup
    && apk del .build-deps

CMD ["supervisord", "-n"]
